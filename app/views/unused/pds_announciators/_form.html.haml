= form_for @pds_announciator do |f|
  - if @pds_announciator.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pds_announciator.errors.count, "error")} prohibited this pds_announciator from being saved:"
      %ul
        - @pds_announciator.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :IC
    = f.number_field :IC
  .field
    = f.label :Project
    = f.number_field :Project
  .field
    = f.label :sys
    = f.number_field :sys
  .field
    = f.label :ctrl_power
    = f.number_field :ctrl_power
  .field
    = f.label :t
    = f.datetime_select :t
  .field
    = f.label :Type
    = f.text_field :Type
  .field
    = f.label :Gr_Dreg
    = f.text_field :Gr_Dreg
  .field
    = f.label :Detector
    = f.number_field :Detector
  .field
    = f.label :Characteristics
    = f.text_field :Characteristics
  .field
    = f.label :sign
    = f.text_field :sign
  .field
    = f.label :Code
    = f.text_field :Code
  .actions
    = f.submit 'Save'
