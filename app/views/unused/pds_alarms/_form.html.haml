= form_for @pds_alarm do |f|
  - if @pds_alarm.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pds_alarm.errors.count, "error")} prohibited this pds_alarm from being saved:"
      %ul
        - @pds_alarm.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :IC
    = f.number_field :IC
  .field
    = f.label :sys
    = f.number_field :sys
  .field
    = f.label :Project
    = f.number_field :Project
  .field
    = f.label :t
    = f.datetime_select :t
  .actions
    = f.submit 'Save'
