= form_for @pds_negotiator do |f|
  - if @pds_negotiator.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pds_negotiator.errors.count, "error")} prohibited this pds_negotiator from being saved:"
      %ul
        - @pds_negotiator.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :post
    = f.text_field :post
  .field
    = f.label :Project
    = f.number_field :Project
  .field
    = f.label :chef
    = f.check_box :chef
  .field
    = f.label :ord
    = f.number_field :ord
  .actions
    = f.submit 'Save'
