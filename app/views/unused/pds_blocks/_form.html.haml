= form_for @pds_block do |f|
  - if @pds_block.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pds_block.errors.count, "error")} prohibited this pds_block from being saved:"
      %ul
        - @pds_block.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sys
    = f.number_field :sys
  .field
    = f.label :p_p
    = f.text_field :p_p
  .field
    = f.label :Desc
    = f.text_area :Desc
  .field
    = f.label :doc
    = f.number_field :doc
  .field
    = f.label :varName
    = f.text_field :varName
  .field
    = f.label :Project
    = f.number_field :Project
  .actions
    = f.submit 'Save'
