= form_for @pds_malfunction_dim do |f|
  - if @pds_malfunction_dim.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pds_malfunction_dim.errors.count, "error")} prohibited this pds_malfunction_dim from being saved:"
      %ul
        - @pds_malfunction_dim.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :Project
    = f.number_field :Project
  .field
    = f.label :Malfunction
    = f.number_field :Malfunction
  .field
    = f.label :Character
    = f.text_field :Character
  .field
    = f.label :Target_EN
    = f.text_field :Target_EN
  .field
    = f.label :Target
    = f.text_field :Target
  .field
    = f.label :sd_N
    = f.number_field :sd_N
  .field
    = f.label :is_main
    = f.check_box :is_main
  .actions
    = f.submit 'Save'
