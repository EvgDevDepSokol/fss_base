= form_for @pds_button do |f|
  - if @pds_button.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pds_button.errors.count, "error")} prohibited this pds_button from being saved:"
      %ul
        - @pds_button.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :IC
    = f.number_field :IC
  .field
    = f.label :sys
    = f.number_field :sys
  .field
    = f.label :Project
    = f.number_field :Project
  .field
    = f.label :range
    = f.text_area :range
  .field
    = f.label :Fixed
    = f.check_box :Fixed
  .field
    = f.label :t
    = f.datetime_select :t
  .actions
    = f.submit 'Save'
