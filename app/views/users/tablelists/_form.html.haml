= form_for @tablelist do |f|
  - if @tablelist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tablelist.errors.count, "error")} prohibited this tablelist from being saved:"
      %ul
        - @tablelist.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :table
    = f.text_field :table
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :Desc
    = f.text_field :Desc
  .field
    = f.label :BlobObj
    = f.number_field :BlobObj
  .field
    = f.label :number
    = f.number_field :number
  .actions
    = f.submit 'Save'
