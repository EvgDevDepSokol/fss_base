<h2>Sign in</h2>

<%= form_for(resource, :as => :user, :url => session_path(resource_name), :html => {:pds_project_id => 83}) do |f| %>
  <div><%= f.label :login %><br />
  <%= f.text_field :login, :autofocus => true %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <p> </p>

   <%= f.select(:login_project) do %>
     <% [['ПМТ Смоленск-2', 90], ['ПМТ СмАЭС-3', 87], ['Курск-2',83], ['ПМТ КуАЭС-4',80000001], ['ПМТ БалАЭС-1',88]].each do |c| -%>
       <%= content_tag(:option, c.first, value: c.last) %>
     <% end %>
   <% end %>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "users/shared/links" %>
